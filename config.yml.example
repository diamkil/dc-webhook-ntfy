topics:
  topic1:
    filters:
      - key: "details.important"
        value: true
      - key: "status.urgent"
        value: "yes"
    format: "Important Message from {{details.sender}}: {{details.message}}. Status: {{status.urgent}}"

  topic2:
    filters:
      - key: "priority.level"
        value: "high"
    format: "High Priority Alert: {{details.message}} from {{details.sender}}"

  topic3:
    filters: []  # No filters, allow all messages
    format: "{{message}}"  # Raw formatting, just the message contents
